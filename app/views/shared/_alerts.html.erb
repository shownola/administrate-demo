<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Administrate Demo Alert", sticky: false, image: :notice, time: 3000) %>
  <% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Administrate Demo Error", sticky: false, image: :notice, time: 3000) %>
  <% else %>
    <%= js add_gritter(flash[:notice], title: "Administrate Demo Notification", sticky: false, image: :notice, time: 3000) %>
  <% end %>